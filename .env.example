# Project Alpha â€” Environment Variables
# Copy this file to .env and adjust values as needed.

# --- DATA ---
# Market to trade: "us" or "india"
PA_MARKET=us

# Directory to store downloaded data and cache
PA_DATA_DIR=data

# Cache time-to-live in hours
PA_CACHE_TTL_HOURS=24

# --- MODEL TRAINING ---
# Polynomial order for Volatile model (lower = less overfitting)
PA_MODEL_ORDER=2

# Correlation order for analysis
PA_CORRELATION_ORDER=52

# Learning rate for model training
PA_LEARNING_RATE=0.01

# Training steps for trend model
PA_TREND_STEPS=10000

# Training steps for correlation model
PA_CORRELATION_STEPS=50000

# --- SCREENERS ---
# Minimum volume to consider a stock liquid
PA_MIN_VOLUME=100000

# Breakout screener: maximum allowable selling pressure (0.0 - 1.0)
PA_BREAKOUT_SELLING_PRESSURE_MAX=0.40

# Breakout screener: open/close threshold
PA_BREAKOUT_OC_THRESHOLD=1.0

# Breakout screener: volume threshold relative to average
PA_BREAKOUT_VOLUME_THRESHOLD=0.5

# Lookback period for trend identification (days)
PA_TREND_LOOKBACK_DAYS=20

# --- RISK MANAGEMENT ---
# Risk per trade as a fraction of account equity (0.01 = 1%)
PA_RISK_PER_TRADE=0.01

# ATR multiplier for stop-loss
PA_ATR_MULTIPLIER=2.0

# Maximum number of simultaneous open positions
PA_MAX_POSITIONS=10

# --- EMAIL ALERTS ---
# SMTP server for sending reports
# PA_SMTP_HOST=smtp.gmail.com
# PA_SMTP_PORT=587
# PA_SMTP_USER=your_email@gmail.com
# PA_SMTP_PASSWORD=your_app_password

# --- API KEYS ---
# Finnhub API key for fundamental data (optional)
# PA_FINNHUB_API_KEY=your_finnhub_key

# Polygon.io API key for US market data (optional)
# PA_POLYGON_API_KEY=your_polygon_key

# Financial Modeling Prep API key (optional)
# PA_FMP_API_KEY=your_fmp_key
